{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "--reload",
                "--host",
                "127.0.0.1",
                "--port",
                "8001",
                "--workers",
                "4",
                "airweave.main:app"
            ],
            "cwd": "${workspaceFolder}/backend",
            "console": "integratedTerminal",
            "consoleName": "‚ö° FastAPI Backend",
            "jinja": true,
            "justMyCode": true,
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "LOCAL_DEVELOPMENT": "true",
                "PYTHONPATH": "${workspaceFolder}/backend"
            }
        },
        {
            "name": "Python: Debug Test Method",
            "type": "debugpy",
            "request": "launch",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "python": "${command:python.interpreterPath}"
        },
        {
            "name": "Python: Current Script with CWD",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "justMyCode": true
        },
        {
            "name": "Temporal Worker",
            "type": "debugpy",
            "request": "launch",
            "module": "airweave.platform.temporal.worker",
            "python": "${command:python.interpreterPath}",
            "console": "integratedTerminal",
            "consoleName": "‚ú® Temporal Worker",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend",
                // "LOG_LEVEL": "DEBUG"
            },
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Temporal Worker (hot reload)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.vscode/run_worker_reload.py",
            "console": "integratedTerminal",
            "consoleName": "‚ú® Temporal Worker (Hot Reload)",
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend",
                "AIRWEAVE_DEBUGPY_WORKER_PORT": "7233"
            },
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "subProcess": true
        },
        {
            "name": "Attach to Worker",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 7233
            }
        },
        {
            "name": "Debug React",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8080", // Update this to match your actual Vite port
            "webRoot": "${workspaceFolder}/frontend",
            "runtimeExecutable": "/Applications/Google Chrome.app/Contents/MacOS/Google Chrome",
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/src/*",
                "webpack:///src/*": "${webRoot}/src/*"
            }
        },
        {
            "name": "Monke: Debug",
            "type": "debugpy",
            "request": "launch",
            "module": "monke.runner",
            "python": "${workspaceFolder}/monke/venv/bin/python",
            "args": "${input:monkeArgs}",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "consoleName": "üêí Monke Test Runner",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "MONKE_NO_VENV": "1"
            },
            "envFile": "${workspaceFolder}/monke/.env",
            "justMyCode": false,
            "preLaunchTask": "monke-setup-venv"
        }
    ],
    "compounds": [
        {
            "name": "Full Dev Stack",
            "configurations": [
                "FastAPI",
                "Temporal Worker (hot reload)",
                "Attach to Worker"
            ],
            "stopAll": true,
            "preLaunchTask": "start-dev-stack"
        }
    ],
    "inputs": [
        {
            "id": "monkeArgs",
            "type": "promptString",
            "description": "Enter monke arguments (e.g., 'github' or 'github asana' or '--all' or '--changed')",
            "default": "github"
        }
    ]
}
