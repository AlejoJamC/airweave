{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "üê≥ Docker Services",
            "command": "docker compose -f docker/docker-compose.dev.yml up -d",
            "type": "shell",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "Infrastructure"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Starting.*$",
                    "endsPattern": "^.*Ready.*$"
                }
            }
        },
        {
            "label": "stop-docker-services",
            "command": "docker compose -f docker/docker-compose.dev.yml down",
            "type": "shell",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "üñ•Ô∏è Frontend Dev Server",
            "command": "npm run dev",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "Frontend"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*VITE.*$",
                    "endsPattern": "^.*Local:.*http://.*$"
                }
            }
        },
        {
            "label": "start-dev-stack",
            "dependsOrder": "parallel",
            "dependsOn": [
                "üê≥ Docker Services",
                "üñ•Ô∏è Frontend Dev Server"
            ]
        },
        {
            "label": "monke-setup-venv",
            "type": "shell",
            "command": "if [ ! -d monke/venv ]; then python3 -m venv monke/venv && monke/venv/bin/pip install -r monke/requirements.txt; fi",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated",
                "showReuseMessage": false,
                "clear": false,
                "group": "Monke Setup"
            }
        }
    ]
}
